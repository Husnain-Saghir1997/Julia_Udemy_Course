# â•”â•â•¡ fc0b9942-9588-4807-b885-fed69364b1d1
!true # Not operator

# â•”â•â•¡ e92fca05-3e07-4b3d-bbd3-da1e3ceee763
true && false #AND operator

# â•”â•â•¡ 0548447d-892e-4f04-82d1-aa6ce6c3f169
true || false # OR operator

# â•”â•â•¡ 767f6c77-3fb1-4ccc-bbd8-b754eb16adb2
p == q || p == r

# â•”â•â•¡ be14e924-c516-49af-8da2-d1e3b906f1de
p == q && p == r

